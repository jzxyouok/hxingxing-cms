<?php $__env->startSection('filledScript'); ?>
        $("#submitBtn").click(function() {
          $("#article_form").submit();
        });
        $('#title').select();
        <!--缩略名自适应宽度 来自typecho-->
        var slug = $('#slug');

        if (slug.length > 0) {
          var sw = slug.width();
          if (slug.val().length > 0) {
            slug.css('width', 'auto').attr('size', slug.val().length);
          }
          slug.bind('input propertychange', function () {
            var t = $(this), l = t.val().length;
            if (l > 0) {
              t.css('width', 'auto').attr('size', l);
            } else {
              t.css('width', sw).removeAttr('size');
            }
          }).width();
        }

        <!--启用iCheck响应checkbox与radio表单控件-->
        $('input[type="radio"]').iCheck({
          radioClass: 'iradio_flat-blue',
          increaseArea: '20%' // optional
        });
        $('input[type="checkbox"]').iCheck({
          checkboxClass: 'icheckbox_flat-blue',
          increaseArea: '20%' // optional
        });
        <?php echo $__env->make('scripts.endSinglePic', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?> <?php /* 引入单个图片上传与预览JS，依赖于Layer */ ?>
<?php $__env->stopSection(); ?>

